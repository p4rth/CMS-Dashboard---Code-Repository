<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"> 
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView android:id="@+id/TASK_SCREEN_NAME"
            android:text="abdollah_GluGluToHToZZTo4L_M_525_k3g4z6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginLeft="5sp"
            />
    </LinearLayout>
            
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">             
        <TextView android:id="@+id/TOTAL_NO"
            android:text="Total: 456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"/>                
        <TextView android:id="@+id/TASK_SUBMIT_DATE"
            android:text="2 days ago"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"          
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginRight="5sp"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">             
        <TextView android:id="@+id/PENDING_NO"
            android:text="Pending: 456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"/>                
        <TextView android:id="@+id/RUNNING_NO"
            android:text="Running: 12"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"          
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginRight="5sp"/>
    </LinearLayout>
	<LinearLayout 
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal">
	       <TextView android:id="@+id/SUCCESS_NO"
	           android:text="Successful: 123"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"            
	           android:textColor="#32CD32"
	           android:textSize="12sp"
	           android:layout_marginLeft="5sp" /> 
	       
	       <TextView android:id="@+id/FAILED_NO"
	           android:text="Failed: 123"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content" 
	           android:layout_weight="1"
	           android:gravity="center"
	       	   android:textColor="#FF0000"
	       	   android:textSize="12sp" />
	       
	       <TextView android:id="@+id/UNKNOWN_NO"
	            android:text="Unknown: 235"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:layout_weight="1"           
	            android:textColor="#79BAEC"
	            android:textSize="12sp"
	            android:layout_marginRight="5sp"/>
                
	   </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#00ffff"           
        android:layout_marginTop="5sp"
        >
        <TextView android:id="@+id/COMPLETED"
            android:text="Completed: 182 out of 205"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
        	android:gravity="center"         
            android:layout_marginLeft="5sp"/>
    </LinearLayout>	    	    	    
</LinearLayout>